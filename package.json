{
  "name": "panela-backend",
  "version": "0.0.1",
  "description": "Backend for the Panela App",
  "main": "server.ts",
  "scripts": {
    "start": "NODE_PATH=./build node build/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc -p .",
    "dev": "nodemon src/server.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "fix": "eslint --fix src/**/*.ts && prettier --write src/**/*.ts",
    "docker:build": "docker build -t panela-backend .",
    "docker:run": "docker run -p 5000:5000 panela-backend",
    "start:dev": "NODE_ENV=development nodemon src/server.ts",
    "start:prod": "npm run build && node build/src/server.js",
    "lint-and-test": "npm run lint && npm run test",
    "clean": "rm -rf build/",
    "prebuild": "npm run clean"
  },
  "author": "Felipe Ribeiro",
  "license": "ISC",
  "dependencies": {
    "@types/he": "^1.2.3",
    "axios": "^1.6.2",
    "convert-units": "^2.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-oauth2-jwt-bearer": "^1.2.0",
    "fuse.js": "^7.0.0",
    "he": "^1.2.0",
    "jsdom": "^23.0.1",
    "jsonld": "^8.3.1",
    "luxon": "^3.4.4",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.10",
    "@types/jsdom": "^21.1.6",
    "@types/jsonld": "^1.5.13",
    "@types/luxon": "^3.3.7",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
